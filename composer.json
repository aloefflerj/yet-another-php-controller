{
    "name": "aloefflerj/yet-another-controller",
    "description": "This is basically a http request and response controller using as much PSR's as it can (or just an excuse for personal study)",
    "license": "mit",
    "autoload": {
        "psr-4": {
            "Aloefflerj\\YetAnotherController\\": "src/",
            "Aloefflerj\\YetAnotherController\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "test:unit": "./vendor/bin/phpunit --testsuite unit",
        "test:integration": "./vendor/bin/phpunit --testsuite integration",
        "test:acceptance": "./vendor/bin/phpunit --testsuite acceptance",
        "wait-for-it": "./vendor/bin/wait-for-it.sh"
    },
    "authors": [
        {
            "name": "Anderson Job Loeffler",
            "email": "aloeffler.j@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "10.0.*",
        "symfony/var-dumper": "^6.2"
    },
    "require": {
        "psr/http-message": "^1.0",
        "guzzlehttp/guzzle": "^7.5",
        "vishnubob/wait-for-it": "dev-master"
    }
}
